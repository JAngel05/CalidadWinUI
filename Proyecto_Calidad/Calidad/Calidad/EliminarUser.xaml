<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Calidad.EliminarUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calidad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="EliminarUser">
    <Grid Padding="40" Background="Black">
        <StackPanel VerticalAlignment="Center" Spacing="15">

            <TextBlock Text="¿Deseas eliminar este usuario?" 
                       FontSize="22" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Esta acción no se puede deshacer. Verifica los datos:" 
                       Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Border Background="Black" BorderBrush="#FFCDD2" BorderThickness="2" CornerRadius="8" Padding="15">
                <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto" RowSpacing="8">

                    <TextBlock Text="NoEmpleado:" FontWeight="Bold" Grid.Row="0" Margin="0,0,10,0"/>
                    <TextBlock x:Name="lblNoEmpleado" Text="..." Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Nombre:" FontWeight="Bold" Grid.Row="1" Margin="0,0,10,0"/>
                    <TextBlock x:Name="lblNombre" Text="..." Grid.Row="1" Grid.Column="1" FontWeight="Bold"/>

                    <TextBlock Text="Apellido Paterno:" FontWeight="Bold" Grid.Row="2" Margin="0,0,10,0"/>
                    <TextBlock x:Name="lblApellidoP" Text="..." Grid.Row="2" Grid.Column="1" />
                    
                    <TextBlock Text="Apellido Materno:" FontWeight="Bold" Grid.Row="3" Margin="0,0,10,0"/>
                    <TextBlock x:Name="lblApellidoM" Text="..." Grid.Row="3" Grid.Column="1" />
                </Grid>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Confirmar" Click="Confirmar_Click" 
                        Background="ForestGreen" Foreground="White" CornerRadius="4" Padding="20,8" FontWeight="Bold"/>

                <Button Content="Cancelar" Click="Cancelar_Click" 
                        Background="Red" Foreground="White" CornerRadius="4" Padding="20,8" FontWeight="Bold"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
