<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Calidad.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calidad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Dashboard Productos">
    <Grid Background="Black">

        <SplitView x:Name="splitView" 
                   PaneBackground="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" 
                   IsPaneOpen="True" 
                   OpenPaneLength="200" 
                   CompactPaneLength="50" 
                   DisplayMode="CompactInline">

            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btnMenu" Content="&#xE700;" FontFamily="Segoe MDL2 Assets"
                            Background="Transparent" BorderThickness="0" Foreground="White"
                            HorizontalAlignment="Left" Margin="7,10,0,10"
                            Click="btnMenu_Click"/>

                    <TextBlock Text="Menú" Grid.Row="0" HorizontalAlignment="Left" 
                               Margin="60,15,10,10" FontWeight="Bold" Foreground="White"/>

                    <Button Grid.Row="1" Content="Usuarios" HorizontalAlignment="Stretch" 
                            Background="Transparent" BorderThickness="0" Foreground="White" Margin="5,5,5,5" 
                            Click="UsuariosBtn_Click"/>

                    <Button Grid.Row="2" Content="Productos" HorizontalAlignment="Stretch" 
                            Background="Transparent" BorderThickness="0" Foreground="White" Margin="5,5,5,5" 
                            Click="ProductosBtn_Click"/>
                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid Padding="30" Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Listado de Productos" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>

                        <Button Grid.Column="1" Content="+ Nuevo" Click="AgregarBtn_Click" 
                                Background="#4CAF50" Foreground="White" Margin="0,0,20,0"/>

                        <TextBox x:Name="txtBuscar" Grid.Column="2" PlaceholderText="Buscar por nombre, marca..." 
                                 TextChanged="txtBuscar_TextChanged"/>
                    </Grid>

                    <Border Grid.Row="1" Background="#F0F0F0" Padding="10" CornerRadius="5,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="1.3*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="0.8*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="ID" FontWeight="Bold" Foreground="Black" Grid.Column="0"/>
                            <TextBlock Text="NOMBRE" FontWeight="Bold" Foreground="Black" Grid.Column="1"/>
                            <TextBlock Text="CATEGORÍA" FontWeight="Bold" Foreground="Black" Grid.Column="2"/>
                            <TextBlock Text="MARCA" FontWeight="Bold" Foreground="Black" Grid.Column="3"/>
                            <TextBlock Text="PRECIO" FontWeight="Bold" Foreground="Black" Grid.Column="4"/>
                            <TextBlock Text="STOCK" FontWeight="Bold" Foreground="Black" Grid.Column="5"/>
                            <TextBlock Text="ESTADO" FontWeight="Bold" Foreground="Black" Grid.Column="6"/>
                            <TextBlock Text="ACCIONES" FontWeight="Bold" Foreground="Black" Grid.Column="7" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ListView x:Name="listaProductos" Grid.Row="2" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="1.3*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding ID}" FontWeight="SemiBold" VerticalAlignment="Center" Grid.Column="0" Foreground="White"/>
                                    <TextBlock Text="{Binding Nombre}" FontWeight="SemiBold" VerticalAlignment="Center" Grid.Column="1" Foreground="White"/>
                                    <TextBlock Text="{Binding Categoria}" VerticalAlignment="Center" Grid.Column="2" Foreground="White"/>
                                    <TextBlock Text="{Binding Marca}" VerticalAlignment="Center" Grid.Column="3" Foreground="White"/>
                                    <TextBlock Text="{Binding Precio}" FontWeight="Bold" Foreground="#4CAF50" VerticalAlignment="Center" Grid.Column="4"/>
                                    <TextBlock Text="{Binding Stock}" VerticalAlignment="Center" Grid.Column="5" Foreground="White"/>
                                    <TextBlock Text="{Binding Estado}" VerticalAlignment="Center" Grid.Column="6" Foreground="White"/>

                                    <StackPanel Orientation="Horizontal" Grid.Column="7" Spacing="8" HorizontalAlignment="Center">
                                        <Button Content="Editar" Click="EditarBtn_Click" Tag="{Binding}" 
                                                Background="Transparent" BorderThickness="0" Foreground="AntiqueWhite" ToolTipService.ToolTip="Editar"/>
                                        <Button Content="X" Click="EliminarBtn_Click" Tag="{Binding}" 
                                                Background="Transparent" BorderThickness="0" Foreground="#FF5252" ToolTipService.ToolTip="Eliminar"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView> 
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Window>