<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Calidad.EditarProducto"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calidad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Editar Producto">

    <Grid Padding="30" Background="Black">
        <StackPanel Spacing="20" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Editar Producto" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="100,0,0,0"/>

            <Grid RowSpacing="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ID:" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock x:Name="txtID" Text="..." Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left"/>
                
                <TextBlock Text="Nombre:" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="txtNombre" Grid.Row="1" Grid.Column="1" Width="350" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ErrorMessageNombre" Text="" Foreground="Red" HorizontalAlignment="Center" Margin="0,-10" FontSize="10"/>

                <TextBlock Text="CategorÃ­a:" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="txtCategoria" Grid.Row="3" Grid.Column="1" Width="350" HorizontalAlignment="Center" />
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ErrorMessageCategoria" Text="" Foreground="Red" HorizontalAlignment="Center" Margin="0,-10" FontSize="10"/>

                <TextBlock Text="Marca:" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="txtMarca" Grid.Row="5" Grid.Column="1" Width="350" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="ErrorMessageMarca" Text="" Foreground="Red" HorizontalAlignment="Center" Margin="0,-10" FontSize="10"/>

                <TextBlock Text="Precio:" Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="txtPrecio" Grid.Row="7" Grid.Column="1" Width="350" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="8" Grid.Column="1" x:Name="ErrorMessagePrecio" Text="" Foreground="Red" HorizontalAlignment="Center" Margin="0,-10" FontSize="10"/>

                <TextBlock Text="Stock:" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="txtStock" Grid.Row="9" Grid.Column="1" Width="350" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="10" Grid.Column="1" x:Name="ErrorMessageStock" Text="" Foreground="Red" HorizontalAlignment="Center" Margin="0,-10" FontSize="10"/>

                <TextBlock Text="Estado:" Grid.Row="11" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbEstado" Grid.Row="11" Grid.Column="1" Width= "350" HorizontalAlignment="Center" SelectedIndex="0">
                    <ComboBoxItem Content="Disponible"/>
                    <ComboBoxItem Content="Agotado"/>
                    <ComboBoxItem Content="Sobre pedido"/>
                </ComboBox>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="100,10,0,0">
                <Button Content="Actualizar" Click="btnEditar_Click" Background="#4CAF50" Foreground="White" CornerRadius="5" Padding="20,8"/>
                <Button Content="Regresar" Click="btnRegresar_Click" Background="DimGray" Foreground="White" CornerRadius="5" Padding="15,8"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
